<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme using Light instead of DayNight -->
    <style name="Base.Theme.UranAi" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/soft_blue</item>
        <item name="colorPrimaryDark">@color/soft_blue</item>
        <item name="colorAccent">@color/black</item>
        <!-- Force light color background -->
        <item name="android:windowBackground">@color/white</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>
    </style>

    <style name="Theme.UranAi" parent="Base.Theme.UranAi" />

    <style name="ThemeOverlay.SearchView" parent="">
        <item name="android:editTextColor">@color/gray</item>
        <item name="android:textColorHint">#8F8787</item>
    </style>
    <style name="Theme.UranAi.Login" parent="Theme.UranAi">
        <!-- Force light theme for login -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:statusBarColor">@color/soft_blue</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>