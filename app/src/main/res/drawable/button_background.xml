<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Arka plan rengi -->
    <solid android:color="#6200EE" />

    <!-- Kenar rengi ve kalınlığı -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF" />

    <!-- Köşe yuvarlatma -->
    <corners android:radius="8dp" />

    <!-- İç dolgu (padding) -->
    <padding
        android:left="10dp"
        android:top="5dp"
        android:right="10dp"
        android:bottom="5dp" />
</shape>
